<%= content_tag(:div, options) do %>
  <div>
    <h3 class="flex text-sm font-semibold <%= alert_classes_by_type&.dig(:message_color) %>">
      <%= inline_svg_tag("#{icon}", class: "#{alert_classes_by_type&.dig(:icon, :color)} w-5 h-5 mr-1", aria_hidden: true) %>
      <%= @message %>
    </h3>
    <% if @body.present? %>
      <div class="mt-2 text-sm <%= alert_classes_by_type&.dig(:body_color) %> ml-3">
        <ul role="list" class="list-disc space-y-1 pl-5">
          <% @body.split(", ").each do |info| %>
            <li><%= info %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="ml-auto pl-3">
    <div class="-mx-1.5 -my-1.5">
      <button type="button" data-action="flashes#close" class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 <%= alert_classes_by_type&.dig(:icon, :options) %>">
        <span class="sr-only">Dismiss</span>
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
        </svg>
      </button>
    </div>
  </div>
<% end %>
