<div data-controller="tabs">
  <%= render "tabs" %>


  <%= turbo_frame_tag "request_tab" do %>
    <div class="overflow-hidden bg-white py-16 px-6 lg:px-8 lg:py-24" data-tabs-target="requestTab">
      <%= render partial: "requests/request", locals: {request: @request} %>
    </div>
  <% end %>


  <%= turbo_frame_tag "review_tab" do %>
    <div class="relative bg-white hidden" data-tabs-target="reviewTab">
      <%= render partial: "reviews/review", locals: {review: @review} %>
    </div>
  <% end %>
</div>
