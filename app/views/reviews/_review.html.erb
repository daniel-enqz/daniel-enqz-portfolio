<div class="relative bg-white hidden item-animate" data-tabs-target="reviewTab">
  <div class="absolute inset-0">
    <div class="absolute inset-y-0 left-0 w-1/2 bg-gray-50"></div>
  </div>
  <div class="relative mx-auto max-w-7xl lg:grid lg:grid-cols-5">
    <div class="bg-gray-50 py-16 px-6 lg:col-span-2 lg:px-8 lg:py-24 xl:pr-12">
      <div class="mx-auto max-w-lg">
        <h2 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">Did you contract a service recently?</h2>
        <p class="mt-3 text-lg leading-6 text-gray-500"> Please, leave your review.</p>
      </div>
    </div>
    <div class="bg-white py-16 px-6 lg:col-span-3 lg:py-24 lg:px-8 xl:pl-12">
      <div class="mx-auto max-w-lg lg:max-w-none">
        <%= form_with model: review, url: reviews_path, method: :post, local: true, data: { controller: "form--validator" }  do |f| %>
          <div class="grid grid-cols-1 gap-y-6">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <div class="flex justify-between">
                  <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-700" %>
                  <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="vaildMessage">Valid<i class="mx-1 fa-solid fa-circle-check"></i></p>
                </div>
                <%= f.text_field :first_name, class: "block w-full rounded-md  border-transparent focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "field firstName" } %>
              </div>
              <div>
                <div class="flex justify-between">
                  <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-700" %>
                  <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="vaildMessage">Valid<i class="mx-1 fa-solid fa-circle-check"></i></p>
                </div>
                <%= f.text_field :last_name, class: "block w-full rounded-md border-transparent focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "lastName" } %>
              </div>
            </div>
            <div>
             <div class="flex justify-between">
                <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
                <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="vaildMessage">Valid<i class="mx-1 fa-solid fa-circle-check"></i></p>
              </div>
              <%= f.text_field :email, class: "autofill-color block placeholder:text-slate-400 w-full rounded-md border-transparent focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "email"}, placeholder: "you@email.com" %>
            </div>
            <div>
              <div class="flex justify-between">
                <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700" %>
                <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="vaildMessage">Valid<i class="mx-1 fa-solid fa-circle-check"></i></p>
              </div>
              <%= f.text_area :message, rows: 4, class: "block w-full placeholder:text-slate-400 rounded-md border-transparent focus:border-transparent focus:ring-transparent py-3 px-4 shadow-md", data: { "form--validator-target": "message" }, placeholder: "How was your experience? ðŸ€" %>
            </div>
            <div>
              <div class="flex justify-between">
                <%= f.label :rating, "Leave your rating", class: "block text-sm font-medium text-gray-700" %>
                <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="vaildMessage">Valid<i class="mx-1 fa-solid fa-circle-check"></i></p>
              </div>
              <%= f.select :rating, Review::RATING.map { |rating| [rating[0], rating[1]] }, {}, class: "block w-full rounded-md border-transparent focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "subject" } %>
            </div>
            <div>
              <%= f.submit "Submit", class: "cursor-pointer inline-flex items-center justify-center rounded-md px-6 py-3 text-base font-medium text-black shadow-sm transition ease-in-out delay-150 bg-transparent hover:-translate-y-1 hover:scale-110 hover:bg-green-300 hover:text-white duration-300" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
