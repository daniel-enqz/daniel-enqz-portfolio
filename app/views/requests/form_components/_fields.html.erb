<div>
  <div class="flex justify-between">
    <%= f.label :first_name, "First name", class: "block text-sm font-medium text-gray-700" %>
    <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="validMessage">
      Valid
      <%= inline_svg_tag("line-check.svg", class: "text-green-400 w-4 h-4 inline-block", aria_hidden: true) %>
    </p>
  </div>
  <div class="mt-1">
    <%= f.text_field :first_name, class: "block w-full rounded-md  border-transparent border-2 focus:bg-white focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "field firstName" } %>
  </div>
</div>
<div>
  <div class="flex justify-between">
    <%= f.label :last_name, "Last name", class: "block text-sm font-medium text-gray-700" %>
    <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="validMessage">
      Valid
      <%= inline_svg_tag("line-check.svg", class: "text-green-400 w-4 h-4 inline-block", aria_hidden: true) %>
    </p>
  </div>
  <div class="mt-1">
    <%= f.text_field :last_name, class: "block w-full rounded-md border-transparent border-2 focus:bg-white focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "lastName" } %>
  </div>
</div>
<div class="sm:col-span-2">
  <div class="flex justify-between">
    <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700" %>
    <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="validMessage">
      Valid
      <%= inline_svg_tag("line-check.svg", class: "text-green-400 w-4 h-4 inline-block", aria_hidden: true) %>
    </p>
  </div>
  <div class="mt-1">
    <%= f.select :subject, Request::SUBJECTS, {}, class: "block w-full rounded-md border-transparent border-2 focus:bg-white focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "field subject" } %>
  </div>
</div>
<div class="sm:col-span-2">
  <div class="flex justify-between">
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
    <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="validMessage">
      Valid
      <%= inline_svg_tag("line-check.svg", class: "text-green-400 w-4 h-4 inline-block", aria_hidden: true) %>
    </p>
  </div>
  <div class="mt-1">
    <%= f.text_field :email, class: "autofill-color block placeholder:text-slate-400 w-full rounded-md border-transparent border-2 focus:bg-white focus:border-transparent focus:ring-transparent py-3 px-4 drop-shadow-md  transition ease-in-out delay-100", data: { "form--validator-target": "field email"}, placeholder: "you@email.com" %>
  </div>
</div>
<div class="sm:col-span-2">
  <div class="flex justify-between">
    <%= f.label :message, "Message", class: "block text-sm font-medium text-gray-700" %>
    <p class="hidden text-sm font-medium text-emerald-400 item-animate-right" data-form--validator-target="validMessage">
      Valid
      <%= inline_svg_tag("line-check.svg", class: "text-green-400 w-4 h-4 inline-block", aria_hidden: true) %>
    </p>
  </div>
  <div class="mt-1">
    <%= f.text_area :message, rows: 4, class: "block w-full placeholder:text-slate-400 rounded-md border-transparent border-2 focus:bg-white focus:border-transparent focus:ring-transparent py-3 px-4 shadow-md", data: { "form--validator-target": "field message" }, placeholder: "I would love to schedule a class to improve my data structures and algorithm skills ğŸ’ª" %>
  </div>
</div>
<div class="sm:col-span-2 place-self-center w-3/4">
  <%= f.submit "Submit", class: "cursor-pointer inline-flex w-full items-center justify-center rounded-md px-6 py-3 text-base font-medium text-black shadow-md transition ease-in-out bg-transparent hover:-translate-y-1 hover:scale-110 hover:bg-green-300 hover:text-white duration-300" %>
</div>
